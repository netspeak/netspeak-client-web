{
  "npm": true,
  "moduleResolution": "none",
  "entrypoint": "*.html",
  "sources": [
    "src/**",
    ".nojekyll"
  ],
  "extraDependencies": [
    "node_modules/@webcomponents/webcomponentsjs/**/*.js",
    "node_modules/@polymer/polymer/**/*.js",
    "polymer-fix.js"
  ],
  "builds": [
    {
      "name": "default",
      "js": {
        "minify": true,
        "compile": "es2015",
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "bundle": false
    }
  ]
}
